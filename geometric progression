import java.lang.*;
import java.util.Scanner;
public class GP{
    public static void main(String[] args){
        Scanner ip = new Scanner(System.in);
        int a = ip.nextInt();
        int r = ip.nextInt();
        int n = ip.nextInt();
        int temp=a;
        for(int i =1;i<n;i++){
            double sum=Math.pow(r,i)+a;
            System.out.println(sum+" ");
            temp += sum;
        }
        System.out.println(temp);
    }
}
